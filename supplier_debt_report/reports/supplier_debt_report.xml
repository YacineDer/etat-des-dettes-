<odoo>
    <report
        id="action_report_supplier_debt"
        model="supplier.debt.report"
        string="Print État des Dettes"
        report_type="qweb-pdf"
        file="supplier_debt_report.report_supplier_debt"
        name="supplier_debt_report.report_supplier_debt"
    />

    <template id="report_supplier_debt">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>État des Dettes</h2>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Supplier</th>
                                <th>Total Due</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="supplier">
                                <tr>
                                    <td><t t-esc="supplier.supplier_id.name"/></td>
                                    <td><t t-esc="supplier.total_due"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
